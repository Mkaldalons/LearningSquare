<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Assignment Details -->
        <EditText
            android:id="@+id/assignmentTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment Title"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/assignmentDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assignment Description"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <!-- Due Date EditText modified to trigger a date picker -->
        <EditText
            android:id="@+id/assignmentDueDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Due Date"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/option1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 1"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/option2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 2"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/option3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 3"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <EditText
            android:id="@+id/option4EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 4"
            android:minHeight="48dp"
            android:maxWidth="487dp"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <!-- Replace the correct answer EditText with a Spinner -->
        <Spinner
            android:id="@+id/correctAnswerSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/createAssignmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Assignment"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
