<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.assignments.CreateAssignmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assignment_name" />
        <EditText
            android:id="@+id/editTextAssignmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_assignment_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_date"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_due_date"
            android:focusable="false"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questions"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/linearLayoutQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/buttonAddQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_question"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/buttonSubmitAssignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_assignment"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
